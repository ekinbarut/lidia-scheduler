@model Lidia.Scheduler.UI.Models.ViewModels.ResetPasswordViewModel
@{
    ViewBag.Title = "ForgotPassword";
    Layout = null;
}
<!DOCTYPE html>
<html class="no-js" lang="en">

<head>
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Lidia Scheduler</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @*<link rel="shortcut icon" type="image/png" href="/Content/images/icon/favicon.ico">*@
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/css/themify-icons.css">
    <link rel="stylesheet" href="~/Content/css/metisMenu.css">
    <link rel="stylesheet" href="~/Content/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/css/slicknav.min.css">
    <!-- amchart css -->
    <link rel="stylesheet" href="https://www.amcharts.com/lib/3/plugins/export/export.css" type="text/css" media="all" />
    <!-- others css -->
    <link rel="stylesheet" href="~/Content/css/typography.css">
    <link rel="stylesheet" href="~/Content/css/default-css.css">
    <link rel="stylesheet" href="~/Content/css/styles.css">
    <link rel="stylesheet" href="~/Content/css/responsive.css">
    <!-- modernizr css -->
    <script src="~/Content/js/vendor/modernizr-2.8.3.min.js"></script>

</head>


<body>

    <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
    <!-- preloader area start -->
    <div id="preloader">
        <div class="loader"></div>
    </div>
    <!-- preloader area end -->
    <!-- login area start -->
    <div class="login-area">
        <div class="container">
            <div class="login-box ptb--100">
                @using (Html.BeginForm("ResetPassword", "Identity", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "loginForm" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model=>model.Code)
                    <div class="login-form-head">
                        <h4>Sign In</h4>
                        <p>Fill the fields to reset your password</p>
                    </div>
                    <div class="login-form-body">
                        <div class="form-gp">
                            @*<label for="forgotPassword">Email address</label>*@
                            <input name="Email" type="email" id="forgotPassword" value="@Model.Email">
                            <i class="ti-email"></i>
                        </div>
                        <div class="form-gp">
                            <label for="forgotPassword">New Password</label>
                            <input name="Password" type="password" id="Password" minlength="8">
                            <i class="ti-lock"></i>                           
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                        <div class="form-gp">
                            <label for="forgotPassword">New Password Confirm</label>
                            <input name="ConfirmPassword" type="password" id="ConfirmPassword" minlength="8">
                            <i class="ti-lock"></i>
                            @Html.ValidationMessageFor(model => model.ConfirmPassword)
                        </div>
                        <div class="submit-btn-area">
                            <button id="form_submit" type="submit">Save <i class="ti-arrow-right"></i></button>
                            <div class="login-other row mt-4">
                                <div class="col-6">
                                </div>
                                <div class="col-6">
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- login area end -->
    <!-- jquery latest version -->
    <script src="/Content/js/vendor/jquery-2.2.4.min.js"></script>
    <!-- bootstrap 4 js -->
    <script src="/Content/js/popper.min.js"></script>
    <script src="/Content/js/bootstrap.min.js"></script>
    <script src="/Content/js/owl.carousel.min.js"></script>
    <script src="/Content/js/metisMenu.min.js"></script>
    <script src="/Content/js/jquery.slimscroll.min.js"></script>
    <script src="/Content/js/jquery.slicknav.min.js"></script>

    <!-- others plugins -->
    <script src="/Content/js/plugins.js"></script>
    <script src="~/Content/js/scripts.js"></script>

</body>
</html>