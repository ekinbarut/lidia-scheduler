@model Lidia.Scheduler.UI.Models.ViewModels.EditJobViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-12 mt-5">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">Edit Job</h4>
                    <fieldset disabled>
                        <div class="form-group">
                            @Html.LabelFor(model => model.JobId, "JobId", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.JobId, new { @class = "form-control form-control-lg", @type = "text", @placeholder = "" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.CollectionId, "Collection Name", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("CollectionId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CollectionId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </fieldset>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EnumDropDownListFor(model => model.Type, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10 form-group">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control form-control-lg", @type = "text", @placeholder = "", @id = "example-text-input-lg" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CronExpression, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.CronExpression, new { @class = "form-control form-control-lg", @type = "text", @placeholder = "", @id = "example-text-input-lg", @required = "required" })
                            @Html.ValidationMessageFor(model => model.CronExpression, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.AppKey, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.AppKey, new { @class = "form-control form-control-lg", @type = "text", @placeholder = "", @id = "example-text-input-lg", @required = "required" })
                            @Html.ValidationMessageFor(model => model.AppKey, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Process, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Process, new { @class = "form-control form-control-lg", @type = "text", @placeholder = "", @id = "example-text-input-lg", @required = "required" })
                            @Html.ValidationMessageFor(model => model.Process, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control form-control-lg", @type = "text", @placeholder = "", @id = "example-text-input-lg" })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.JobUrl, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.JobUrl, new { @class = "form-control form-control-lg", @type = "text", @placeholder = "", @id = "example-text-input-lg", @required = "required" })
                            @Html.ValidationMessageFor(model => model.JobUrl, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EnumDropDownListFor(model => model.Status, htmlAttributes: new { @class = "form-control", style = "height: 50px;", @required = "required" })
                            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <input hidden name="Created" value="@Model.Created" />
                    <input hidden name="CollectionId" value="@Model.CollectionId" />
                    <input hidden name="JobId" value="@Model.JobId" />
                </div>
            </div>
        </div>
    </div>
    <input type="submit" value="Save" style="margin-top: 20px; width:13%;" class="btn btn-flat btn-success mb-3 pull-right" />
    <a href="@HttpContext.Current.Request.UrlReferrer" class="btn btn-flat btn-secondary mb-3 pull-right" style="margin-right:30px; margin-top: 20px;">Back to List</a>
}

