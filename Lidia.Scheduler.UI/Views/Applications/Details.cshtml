@model Lidia.Scheduler.UI.Models.ViewModels.ApplicationViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section head{
    <!-- Start datatable css -->

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.18/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.jqueryui.min.css">
}


<div class="row">
    <div class="col-lg-12 mt-5">
        <div class="card">
            <div class="card-body">
                <div id="accordion1" class="according">
                    <div class="card">
                        <div class="card-header">
                            <a class="card-link" data-toggle="collapse" href="#">
                                Application Details
                            </a>
                        </div>
                        <div id="accordion11" class="collapse show" data-parent="#">
                            <div class="card-body">
                                <div class="row p10">
                                    <div class="col-md-3">
                                        <b>Application Id</b>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DisplayFor(model => model.Application.Name)
                                    </div>
                                    <div class="col-md-3">
                                        <b>Application Name</b>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DisplayFor(model => model.Application.Name)
                                    </div>
                                </div>
                                <div class="row p10" style="margin-top: 20px;">
                                    <div class="col-md-3">
                                        <b>Tenant Name</b>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DisplayFor(model => model.Application.Tenant.Name)
                                    </div>
                                    <div class="col-md-3">
                                        <b>@Html.DisplayNameFor(model => model.Application.Code)</b>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DisplayFor(model => model.Application.Code)
                                    </div>
                                </div>
                                <div class="row p10" style="margin-top: 20px;">
                                    <div class="col-md-3">
                                        <b>@Html.DisplayNameFor(model => model.Application.Domain)</b>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DisplayFor(model => model.Application.Domain)
                                    </div>
                                    <div class="col-md-3">
                                        <b>@Html.DisplayNameFor(model => model.Application.Culture)</b>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DisplayFor(model => model.Application.Culture)
                                    </div>
                                </div>
                                <div class="row p10" style="margin-top: 20px;">
                                    <div class="col-md-3">
                                        <b>@Html.DisplayNameFor(model => model.Application.Updated)</b>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DisplayFor(model => model.Application.Updated)
                                    </div>
                                    <div class="col-md-3">
                                        <b>@Html.DisplayNameFor(model => model.Application.Created)</b>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DisplayFor(model => model.Application.Created)
                                    </div>
                                </div>
                                <div class="row p10" style="margin-top: 20px;">
                                    <div class="col-md-3">
                                        <b>@Html.DisplayNameFor(model => model.Application.Status)</b>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DisplayFor(model => model.Application.Status)
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <a href="/Applications/@Model.Application.Id/Edit" class="btn btn-flat btn-success mb-3 pull-right submit-btn-details">Edit</a>
                    <a href="@HttpContext.Current.Request.UrlReferrer" class="btn btn-flat btn-secondary mb-3 pull-right back-btn-details">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Primary table start -->
    <div class="col-12 mt-5">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title">My Collection</h4>
                <div class="data-tables datatable-primary">
                    <table id="dataTable" class="text-center">
                        <thead class="text-capitalize">
                            <tr>
                                <th>@Html.DisplayNameFor(modelıtem => modelıtem.Collections.FirstOrDefault().CollectionId)</th>
                                <th>@Html.DisplayNameFor(modelıtem => modelıtem.Collections.FirstOrDefault().Name)</th>
                                <th>Application Name</th>
                                <th>@Html.DisplayNameFor(modelıtem => modelıtem.Collections.FirstOrDefault().Created)</th>
                                <th>@Html.DisplayNameFor(modelıtem => modelıtem.Collections.FirstOrDefault().Status)</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Collections)
                            {
                                <tr>
                                    <th scope="row">
                                        <a href="/Collections/@item.CollectionId/Details">@Html.DisplayFor(modelItem => item.CollectionId)</a>
                                    </th>
                                    <td>@Html.DisplayFor(modelıtem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelıtem => item.Application.Name)</td>
                                    <td>@Html.DisplayFor(modelıtem => item.Created)</td>
                                    <td>@Html.DisplayFor(modelıtem => item.Status)</td>
                                    <td>
                                        <ul class="d-flex justify-content-center">
                                            <li class="mr-3 text-left">
                                                <a href="/Collections/@item.CollectionId/Edit" id="@item.CollectionId" class="text-secondary"><i class="fa fa-edit text-warning"></i></a>
                                            </li>
                                            <li class="mr-3">
                                                <a href="/Collections/@item.CollectionId/Details" id="@item.CollectionId" class="text-secondary"><i class="fa fa-search text-success"></i></a>
                                            </li>
                                            <li>
                                                <a href="/Collections/@item.CollectionId/Delete" id="@item.CollectionId" class="text-danger"><i class="ti-trash"></i></a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Collections/Create" class="btn btn-flat btn-success mb-3 pull-right" style="margin-top: 20px;">Create New</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Primary table end -->
</div>



@section scripts{

    <!-- Start datatable js -->
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
    <script src="https://cdn.datatables.net/1.10.18/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.18/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/responsive.bootstrap.min.js"></script>

    <script>
        if ($('#dataTable').length) {
            $('#dataTable').DataTable({
                responsive: true
            });
        }
    </script>

}
