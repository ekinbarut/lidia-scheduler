@model Lidia.Scheduler.UI.Models.ViewModels.UserViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section head{
    <!-- Start datatable css -->

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.18/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.jqueryui.min.css">
}

<div class="row">
    <div class="col-lg-12 mt-5">
        <div class="card">
            <div class="card-body">
                <div id="accordion1" class="according">
                    <div class="card">
                        <div class="card-header">
                            <a class="card-link" data-toggle="collapse" href="#">
                                Application Details
                            </a>
                        </div>
                        <div id="accordion11" class="collapse show" data-parent="#">
                            <div class="card-body">
                                <div class="row p10">
                                    <div class="col-md-3">
                                        <b>@Html.DisplayNameFor(model => model.User.Id)</b>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DisplayFor(model => model.User.Id)
                                    </div>
                                    <div class="col-md-3">
                                        <b>Ad Soyad</b>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DisplayFor(model => model.User.Firstname)&nbsp;@Html.DisplayFor(model => model.User.Lastname)
                                    </div>
                                </div>
                                <div class="row p10" style="margin-top: 20px;">
                                    <div class="col-md-3">
                                        <b>@Html.DisplayNameFor(model => model.User.UserName)</b>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DisplayFor(model => model.User.UserName)
                                    </div>
                                    <div class="col-md-3">
                                        <b>@Html.DisplayNameFor(model => model.User.Birthdate)</b>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DisplayFor(model => model.User.Birthdate)
                                    </div>
                                </div>
                                <div class="row p10" style="margin-top: 20px;">
                                    <div class="col-md-3">
                                        <b>@Html.DisplayNameFor(model => model.User.MobileNumber)</b>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DisplayFor(model => model.User.MobileNumber)
                                    </div>
                                    <div class="col-md-3">
                                        <b>@Html.DisplayNameFor(model => model.User.Email)</b>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DisplayFor(model => model.User.Email)
                                    </div>
                                </div>
                                <div class="row p10" style="margin-top: 20px;">
                                    <div class="col-md-3">
                                        <b>@Html.DisplayNameFor(model => model.User.MobileNumberConfirmed)</b>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DisplayFor(model => model.User.MobileNumberConfirmed)
                                    </div>
                                    <div class="col-md-3">
                                        <b>@Html.DisplayNameFor(model => model.User.EmailConfirmed)</b>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DisplayFor(model => model.User.EmailConfirmed)
                                    </div>
                                </div>
                                <div class="row p10" style="margin-top: 20px;">
                                    <div class="col-md-3">
                                        <b>@Html.DisplayNameFor(model => model.User.PhoneNumber)</b>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DisplayFor(model => model.User.PhoneNumber)
                                    </div>
                                    <div class="col-md-3">
                                        <b>@Html.DisplayNameFor(model => model.User.Gender)</b>
                                    </div>
                                    <div class="col-md-3">
                                        @Html.DisplayFor(model => model.User.Gender)
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <a href="/Users/@Model.User.Id/Edit" class="btn btn-flat btn-success mb-3 pull-right submit-btn-details">Edit</a>
                    <a href="@HttpContext.Current.Request.UrlReferrer" class="btn btn-flat btn-secondary mb-3 pull-right back-btn-details">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

