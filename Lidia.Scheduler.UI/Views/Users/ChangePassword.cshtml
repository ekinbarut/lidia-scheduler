@model Lidia.Scheduler.UI.Models.ViewModels.ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-12 mt-5">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">Change Password</h4>
                    <fieldset disabled>
                        <div class="form-group">
                            @Html.LabelFor(model => model.User.Id, "Id", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.User.Id, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.User.Id, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </fieldset>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, "Password", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control form-control-lg", @type = "password", @placeholder = "", @id = "example-text-input-lg", @required = "required" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.NewPassword, "New Password", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.NewPassword, new { @class = "form-control form-control-lg", @type = "password", @placeholder = "", @id = "example-text-input-lg", @required = "required" })
                            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.NewPasswordConfirm, "Password Confirm", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.NewPasswordConfirm, new { @class = "form-control form-control-lg", @type = "password", @placeholder = "", @id = "example-text-input-lg", @required = "required" })
                            @Html.ValidationMessageFor(model => model.NewPasswordConfirm, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <input hidden name="Created" value="@DateTime.Today" />
                    <input hidden name="Id" value="@Model.User.Id" />
                </div>
            </div>

        </div>
    </div>


    <input type="submit" value="Save" style="margin-top: 20px; width:13%;" class="btn btn-flat btn-success mb-3 pull-right" />

    <a href="@HttpContext.Current.Request.UrlReferrer" class="btn btn-flat btn-secondary mb-3 pull-right" style="margin-right:30px; margin-top: 20px;">Back to List</a>
}
